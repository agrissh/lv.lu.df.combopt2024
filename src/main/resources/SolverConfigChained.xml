<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<solver xmlns="https://timefold.ai/xsd/solver">
    <environmentMode>REPRODUCIBLE</environmentMode>
    <monitoring>
        <metric>BEST_SCORE</metric>
        <metric>PICKED_MOVE_TYPE_STEP_SCORE_DIFF</metric>
        <metric>PICKED_MOVE_TYPE_BEST_SCORE_DIFF</metric>
    </monitoring>
    <solutionClass>lv.lu.df.combopt.defsched.chainbased.domain.DefenseSchedule</solutionClass>
    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Session</entityClass>
    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.TimedEvent</entityClass>
    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.SessionMember</entityClass>
    <scoreDirectorFactory>
        <constraintProviderClass>lv.lu.df.combopt.defsched.chainbased.solver.CostFunction</constraintProviderClass>
    </scoreDirectorFactory>
    <termination>
        <secondsSpentLimit>3600</secondsSpentLimit>
    </termination>
    <constructionHeuristic>
        <queuedEntityPlacer>
            <entitySelector id="placerEntitySelector">
                <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
                <cacheType>PHASE</cacheType>
                <selectionOrder>SORTED</selectionOrder>
                <sorterWeightFactoryClass>lv.lu.df.combopt.defsched.chainbased.solver.ThesisSelectionSorterWeightFactory</sorterWeightFactoryClass>
            </entitySelector>
            <changeMoveSelector>
                <entitySelector mimicSelectorRef="placerEntitySelector"/>
            </changeMoveSelector>
        </queuedEntityPlacer>
    </constructionHeuristic>
    <constructionHeuristic>
        <queuedEntityPlacer>
            <entitySelector id="placerEntitySelector">
                <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.SessionMember</entityClass>
                <cacheType>PHASE</cacheType>
            </entitySelector>
            <changeMoveSelector>
                <entitySelector mimicSelectorRef="placerEntitySelector"/>
            </changeMoveSelector>
        </queuedEntityPlacer>
    </constructionHeuristic>
    <localSearch>
        <localSearchType>TABU_SEARCH</localSearchType>
        <unionMoveSelector>
            <changeMoveSelector>
                <entitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
                </entitySelector>
                <valueSelector/>
            </changeMoveSelector>
            <changeMoveSelector>
                <entitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.SessionMember</entityClass>
                </entitySelector>
                <valueSelector/>
            </changeMoveSelector>
            <swapMoveSelector>
                <entitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
                </entitySelector>
                <secondaryEntitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
                </secondaryEntitySelector>
            </swapMoveSelector>
            <swapMoveSelector>
                <entitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.SessionMember</entityClass>
                </entitySelector>
                <secondaryEntitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.SessionMember</entityClass>
                </secondaryEntitySelector>
            </swapMoveSelector>
            <subChainChangeMoveSelector>
                <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
            </subChainChangeMoveSelector>
            <subChainSwapMoveSelector>
                <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
            </subChainSwapMoveSelector>
            <tailChainSwapMoveSelector>
                <entitySelector>
                    <entityClass>lv.lu.df.combopt.defsched.chainbased.domain.Thesis</entityClass>
                </entitySelector>
            </tailChainSwapMoveSelector>
        </unionMoveSelector>
    </localSearch>
</solver>